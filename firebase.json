{
  "hosting": {
    "public": "client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/appointments",
        "destination": "/appointments.html"
      },
      {
        "source": "/add-new",
        "destination": "/add-new.html"
      },
      {
        "source": "/reminders",
        "destination": "/reminders.html"
      },
      {
        "source": "/reports",
        "destination": "/reports.html"
      },
      {
        "source": "**",
        "destination": "/appointments.html"
      }
    ]
  }
}